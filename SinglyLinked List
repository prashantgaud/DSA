package practice;

public class SLL{

Node head;

static class Node{
	int data;
	Node next;

	Node(int d)
{
	data=d;
	next=null;
}
}


void disp(){
	Node n=head;
	while(n!=null){
		System.out.print(n.data+" ");
		n=n.next;
	}
}

void insert(int new_data){
	Node new_node=new Node(new_data);
	new_node.next=head;
	head=new_node;
}
void insertBetween(Node prev,int new_data){
	Node new_node=new Node(new_data);
	if(prev==null)
	{
		System.out.println();
		System.out.println("Sorry Insertion is not possible if there is no other previous Node");
	}
	else 
	{
		System.out.println();
	new_node.next=prev.next;
	prev.next=new_node;
	}
}

void insertAtlast(int new_data){
	Node new_node=new Node(new_data);
	if(head==null){
		head=new_node;
		return;
	}
	Node n=head;
	while(n.next!=null){
		n=n.next;
	}
	n.next=new_node;
	return;

}

void deleteOps(int key){
	Node temp=head;
	Node prev=null;

	if(temp!=null && temp.data==key){ // Case 1
		head=temp.next;
		return;
	}

	while(temp!=null && temp.data!=key){
		prev=temp;
		temp=temp.next;
	}
	if(temp==null){
		System.out.println("Sorry Key not found");
		return;
	}
	prev.next=temp.next;  //case 2 and case 3 Delete between and Delete at last


}

void nodeCouunt(){
	Node n=head;
	int count=0;
	while(n!=null){
		count++;
		n=n.next;
	}
	System.out.println("Node Count+ "+count);

}
void search(Node head,int key)
{
	Node n=head;
	
	while(n!=null){
		if(n.data==key) {
			System.out.println("Keyfound");
			return;
			
		}
		n=n.next;
		}
	System.out.println("Sorry Key not found");

}

void reverseNode(Node head) {
	if(head==null)  // base condition
	return;
	reverseNode(head.next);	 
	System.out.println(head.data);
}

public static void main(String [] args) {
SLL ll= new SLL();
ll.insert(50);
ll.insert(40);
ll.insert(30);
ll.insert(20);
ll.insertAtlast(60);
ll.disp();
ll.insertBetween(ll.head.next,100);
ll.disp();
System.out.println();
ll.deleteOps(20);
ll.search(ll.head,50);
ll.reverseNode(ll.head);
ll.disp();
}
}
